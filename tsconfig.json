{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "ESNext",
        "noImplicitAny": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "allowJs": true,
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": false,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "src/**/*",
        "global.d.ts",
        "./node_modules/@types"
    ],
    "exclude": [
        "node_modules"
    ]
}
